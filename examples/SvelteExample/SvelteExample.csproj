<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="GUI\**" />
    <EmbeddedResource Remove="GUI\**" />
    <None Remove="GUI\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="wwwroot\**\*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Gluino.SourceGeneration\Gluino.SourceGeneration.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\..\src\Gluino\Gluino.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy $(SolutionDir)src\Gluino.Core\bin\x64\Debug\Gluino.Core.dll $(TargetDir)&#xD;&#xA;copy $(SolutionDir)src\Gluino.Core\bin\x64\Debug\Gluino.Core.pdb $(TargetDir)&#xD;&#xA;copy $(SolutionDir)src\Gluino.Core\bin\x64\Debug\WebView2Loader.dll $(TargetDir)" />
  </Target>

</Project>
